package game.engine;

public class Level {

	public static final int ONE_TWO_ID = 12;
	public static final int TWO_THREE_ID = 23;
	public static final int THREE_FOUR_ID = 34;
	
	private int dimension;
	private Player player;
	private Goal goal;
	private int[][][][] layout;
	private float x, y, z, w;
	
	public Level() {
		
		this.dimension = ONE_TWO_ID;
		this.player = new Player();
		this.goal = new Goal();
		this.layout = new int[6][6][6][6];
		this.x = 0;
		this.y = 0;
		this.z = 0;
		this.w = 0;
	}
	
	public void update() {
		
		player.update();
	}
	
	public void render() {
		
		player.render(x, y);
	}
}
