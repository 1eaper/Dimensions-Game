package game.engine;

public class GameObject {

	private float x, y, z, w;
	private float sizex, sizey, sizez, sizew;
	
	/*
	 *  Constructors
	 */
	
	public GameObject(float x, float y, float sizex, float sizey) {
		
		this.x = x;
		this.y = y;
		this.z = 0;
		this.w = 0;
		this.sizex = sizex;
		this.sizey = sizey;
		this.sizez = 1;
		this.sizew = 1;
	}
	
	public GameObject(float x, float y, float size) {
		
		this.x = x;
		this.y = y;
		this.z = 0;
		this.w = 0;
		this.sizex = size;
		this.sizey = size;
		this.sizez = 1;
		this.sizew = 1;
	}
	
	public GameObject(float x, float y, float z, 
					  float sizex, float sizey, float sizez) {
		
		this.x = x;
		this.y = y;
		this.z = z;
		this.w = 0;
		this.sizex = sizex;
		this.sizey = sizey;
		this.sizez = sizez;
		this.sizew = 1;
	}
	
	public GameObject(float x, float y, float z, float size, int meh) {
		
		this.x = x;
		this.y = y;
		this.z = z;
		this.w = 0;
		this.sizex = size;
		this.sizey = size;
		this.sizez = size;
		this.sizew = 1;
	}
	
	public GameObject(float x, float y, float z, float w, 
					  float sizex, float sizey, float sizez, float sizew) {
		
		this.x = x;
		this.y = y;
		this.z = z;
		this.w = w;
		this.sizex = sizex;
		this.sizey = sizey;
		this.sizez = sizez;
		this.sizew = sizew;
	}
	
	public GameObject(float x, float y, float z, float w, float size) {
		
		this.x = x;
		this.y = y;
		this.z = z;
		this.w = w;
		this.sizex = size;
		this.sizey = size;
		this.sizez = size;
		this.sizew = size;
	}
	
	/*
	 *  Not Constructors
	 */
	
	abstract void update();
	abstract void render();
}
