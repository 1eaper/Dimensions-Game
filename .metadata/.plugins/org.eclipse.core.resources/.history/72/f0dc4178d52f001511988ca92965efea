package game;

import game.engine.Draw;
import game.engine.GameObject;
import game.engine.Time;

import org.lwjgl.opengl.Display;

public class Player extends GameObject{

	public final float VEL = 50f;
	public final static float SIZE = 50f;

	private float moveTime;
	private float timer;
	
	public Player() {
		
		super(SIZE / 2, Display.getHeight() / 2 - SIZE / 2, SIZE);
		moveTime = .5f;
		timer = moveTime;
	}
	
	public Player(float x, float y, float z, float w, float size) {
		
		super(x, y, z, w, size);
	}
	
	public void update() {
		
		if(timer > 0) {
			timer -= Time.Delta();
		}
	}
	
	public void render() {
		
		Draw.drawSq(x, y, sx);
	}
	
	public void move(int xdir, int ydir) {
		if(canMove()) {
			x += SIZE * xdir;
			y += SIZE * ydir;
		}
	}
	
	public void move(float velx, float vely, float velz) {
		
		x += velx;
		y += vely;
		z += velz;
	}
	
	public void move(float velx, float vely, float velz, float velw) {
		
		x += velx;
		y += vely;
		z += velz;
		w += velw;
	}
	
	public boolean canMove() {
		
		return timer <= 0;
	}
}
